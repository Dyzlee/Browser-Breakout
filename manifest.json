{
    "manifest_version": 2,
    "name": "Browser Breakout",
    "author": "Dyzlee",
    "description": "Play Breakout on any webpage!",
    "version": "0.1",
    "icons": { 
        "16": "icon16.png",
        "48": "icon48.png",
       "128": "icon128.png" },
    "browser_action": {
        "default_popup": "menu.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["content.css"],
            "js": ["content.js"]
        }
    ],
    "permissions": [
        "storage"
    ]
  }